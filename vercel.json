{
  "version": 2,
  "builds": [
    {
      "src": "backend/vercel_app.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/vercel_app.py"
    },
    {
      "src": "/(.*\\..+)",
      "dest": "frontend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/hr-dashboard.html"
    }
  ],
  "env": {
    "DATABASE_URL": "postgresql://neondb_owner:npg_Rd4T5NcfHVie@ep-billowing-morning-a1zikan5-pooler.ap-southeast-1.aws.neon.tech/neondb?sslmode=require",
    "FLASK_ENV": "production",
    "FLASK_APP": "backend/vercel_app.py"
  }
} 